<header class="bg-white shadow-md">
  <div class="container mx-auto px-6 py-4 flex justify-between items-center">
    <!-- Site Title -->
    <div class="text-2xl font-bold text-indigo-600">
      <%= link_to "GIS Water Management System", root_path %>
    </div>

    <!-- Navigation Links -->
    <nav class="flex items-center space-x-4">
      <% if user_signed_in? %>
        <!-- Logged In Links -->
        <span class="text-gray-700">Welcome, <%= current_user.email %></span>
        <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "text-gray-700 hover:text-indigo-600" %>
      <% else %>
        <!-- Logged Out Links -->
        <%= link_to "Log In", new_user_session_path, class: "text-gray-700 hover:text-indigo-600" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "text-gray-700 hover:text-indigo-600" %>
      <% end %>
    </nav>
  </div>
</header>